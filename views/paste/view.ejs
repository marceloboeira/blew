<div class="container">
	<div class="row">
		<div class="container ">
    		<h1><i class="fa fa-file-code-o "></i> <%= paste.name %>  
						<%if (paste.isPrivate()) { %>
							<%-: 'lock' | iconComponent %>
						<% }  %>
    		<hr>
    		</h1>
			<i class="fa fa-code"></i> <%= paste.language %> |
			<i class="fa fa-user"></i> <a pjax href="<%= paste.owner.getLink() %>"> <%= paste.owner.name %> </a> |
			<i class="fa fa-calendar"></i> <b><%= __("Created") + " " %> </b><%-: paste.createdAt | dateComponent %> |
			<i class="fa fa-clock-o"></i> <b><%= __("Updated") + " " %> </b><%-: paste.updatedAt | dateComponent %>
			<hr>
    	</div>
    </div>
	<div class="row">
		<div class="container">
			<pre><code highlight class="<%= paste.language %>"><%= paste.content %></code></pre>
		</div>
	</div>
</div>
